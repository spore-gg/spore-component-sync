{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "alwaysStrict": true,
    "lib": ["es2022"],
    "allowJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedParameters": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "target": "ES2022",
    "strictNullChecks": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "newLine": "lf",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
